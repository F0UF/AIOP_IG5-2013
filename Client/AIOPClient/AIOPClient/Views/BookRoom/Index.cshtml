@{
    ViewBag.Title = "Book Room";
}



<form role="form" class="form-horizontal">
    <div class="row">
        @* We'll have to do a concatenation of Promo/Year/Groupe if needed*@
        <div class="col-md-2">
            <label for="promotion">Promotion</label>
        </div>
        <div class="col-md-2">
            <select class="form-control" title="">
                <option>ERII</option>
                <option>IG</option>
                <option>MAT</option>
                <option>MI</option>
                <option>STE</option>
                <option>STIA</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="year">Year</label>
        </div>
        <div class="col-md-2">
            <select class="form-control">
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="group">Group</label>
        </div>
        <div class="col-md-2">
            <select class="form-control">
                <option>anglais G1</option>
                <option>anglais G2</option>
                <option>G1</option>
                <option>G2</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <label for="teaching">Teaching</label>
        </div>
        <div class="col-md-2">
            <select class="form-control">
                <option>AIOP</option>
                <option>Communication</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="type">Type</label>
        </div>
        <div class="col-md-2">
            <select class="form-control"></select>
        </div>
    </div>

    <label class="checkbox">
        <input type="checkbox" id="projector" value="option1"> Projector
    </label>
    <label class="checkbox">
        <input type="checkbox" id="computers" value="option2"> Computers
    </label>


    <div id="datePicker" class="input-append date">
        <input type="text">
        <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
        </span>
    </div>
    <script type="text/javascript"
            src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js">
    </script>
    <script type="text/javascript"
            src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js">
    </script>
    <script type="text/javascript"
            src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js">
    </script>
    <script type="text/javascript"
            src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.pt-BR.js">
    </script>
    <script type="text/javascript">
        $('#datePicker').datetimepicker({
            format: 'dd/MM/yyyy',
            language: 'en',
            pickTime: false
        });
    </script>
    <div id="beginTimePicker" class="input-append date">
        <input type="text">
        <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
        </span>
    </div>
    <script type="text/javascript"
            src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js">
    </script>
    <script type="text/javascript"
            src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js">
    </script>
    <script type="text/javascript"
            src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js">
    </script>
    <script type="text/javascript"
            src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.pt-BR.js">
    </script>
    <script type="text/javascript">
        $('#beginTimePicker').datetimepicker({
            format: 'hh:mm:ss',
            language: 'en',
            pickDate: false,
            pickSeconds: false
        });
    </script>
    <div id="endTimePicker" class="input-append date">
        <input type="text">
        <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
        </span>
    </div>
    <script type="text/javascript"
            src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js">
    </script>
    <script type="text/javascript"
            src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js">
    </script>
    <script type="text/javascript"
            src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js">
    </script>
    <script type="text/javascript"
            src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.pt-BR.js">
    </script>
    <script type="text/javascript">
        $('#endTimePicker').datetimepicker({
            format: 'hh:mm:ss',
            language: 'en',
            pickDate: false,
            pickSeconds: false
        });
    </script>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
