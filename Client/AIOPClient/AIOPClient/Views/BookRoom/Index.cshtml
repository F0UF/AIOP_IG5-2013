@{
    ViewBag.Title = "Book Room";
}



<form role="form" class="form-horizontal">
    <div class="row">
        @* We'll have to do a concatenation of Promo/Year/Groupe if needed*@
        <div class="col-md-2">
            <label for="promotion">Promotion</label>
        </div>
        <div class="col-md-2">
            <select class="form-control" title="">
                <option>ERII</option>
                <option>IG</option>
                <option>MAT</option>
                <option>MI</option>
                <option>STE</option>
                <option>STIA</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="year">Year</label>
        </div>
        <div class="col-md-2">
            <select class="form-control">
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="group">Group</label>
        </div>
        <div class="col-md-2">
            <select class="form-control">
                <option>anglais G1</option>
                <option>anglais G2</option>
                <option>anglais G3</option>
                <option>G1</option>
                <option>G2</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <label for="teaching">Teaching</label>
        </div>
        <div class="col-md-2">
            <select class="form-control">
                <option>AIOP</option>
                <option>Communication</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="type">Type</label>
        </div>
        <div class="col-md-2">
            <select class="form-control">
                <option>Cours</option>
                <option>TD</option>
                <option>TP</option>
            </select>
        </div>
    </div>

    <label for="projector" class="inline checkbox">
        <input id="rojector" name="projector" type="checkbox">
        Projector
    </label>
    <label for="computers" class="inline checkbox">
        <input id="computers" name="computers" type="checkbox">
        Computers
    </label>

    <!-- DATE PICKER -->

    <div class="form-group row">
        <div class="input-group date" id="datePicker" data-date="12-02-2012" data-date-format="mm-dd-yyyy">
            <input class="form-control" type="text" readonly="">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-calendar"></i>
            </span>
        </div>
    </div>

    <script type="text/javascript"
            src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js">
    </script>
    <script type="text/javascript"
            src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js">
    </script>
    <script type="text/javascript"
            src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js">
    </script>
    <script type="text/javascript"
            src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.pt-BR.js">
    </script>
    <script type="text/javascript">
        $('#datePicker').datetimepicker({
            format: 'dd/MM/yyyy',
            language: 'en',
            pickTime: false
        });
    </script>

    <div id="beginTimePicker" class="input-group date">
        <input class="form-control" type="text">
        <span class="input-group-addon">
            <i class="glyphicon glyphicon-calendar"></i>
        </span>
    </div>

    <script type="text/javascript"
            src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js">
    </script>
    <script type="text/javascript"
            src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js">
    </script>
    <script type="text/javascript"
            src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js">
    </script>
    <script type="text/javascript"
            src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.pt-BR.js">
    </script>
    <script type="text/javascript">
        $('#beginTimePicker').datetimepicker({
            format: 'hh:mm:ss',
            language: 'en',
            pickDate: false,
            pickSeconds: false
        });
    </script>
    <div id="endTimePicker" class="input-append date">
        <input type="text">
        <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
        </span>
    </div>
    <script type="text/javascript"
            src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js">
    </script>
    <script type="text/javascript"
            src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js">
    </script>
    <script type="text/javascript"
            src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js">
    </script>
    <script type="text/javascript"
            src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.pt-BR.js">
    </script>
    <script type="text/javascript">
        $('#endTimePicker').datetimepicker({
            format: 'hh:mm:ss',
            language: 'en',
            pickDate: false,
            pickSeconds: false
        });
    </script>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
